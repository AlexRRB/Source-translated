<section class="gh-container is-{{#match @custom.post_list_style "List"}}list{{else}}grid{{/match}} gh-outer">
    <div class="gh-container-inner gh-inner">
        <main class="gh-main">
            <h2 class="gh-feed-title">Latest</h2>
            <div class="gh-feed">
                {{#foreach posts from="8"}}
                    {{> "loop"}}
                {{/foreach}}
            </div>
        </main>
    </div>
</section>